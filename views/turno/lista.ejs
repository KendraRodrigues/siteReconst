<html>
	<head>
		<title>Skefesa</title>
		<meta charset="UTF-8">
	</head>
	<body>
		<h1>Lista de Professores</h1>
		<hr>

        <form action="/filtrarTurno" method="post">

            <label for="nome">Nome (use % como cartere coringa):</label><br>
            <input type="text" name="nome" id="nome" size="30"><br><br>
            
            <input type="submit" name="filtrar" value="Filtrar">
        
        </form>

		<a href="/formTurno">Novo Turno</a> &nbsp;
		<a href="/">Voltar para Tela Principal</a>&nbsp;

		<form action="/excluirTurno" method="post">
			<input type="submit" name="acao" value="Excluir">
			<input type="submit" name="acao" value="Atualizar">
			<table border="1">
				<tr>
					<th>Seleção</th>
					<th>Turno</th>
				</tr>
				<% turnos.forEach((t, index) => { %>
				<tr>
					<td><input type="radio" name="nome" value="<%= t.nome %>"></td>
					<td><%= t.nome %></td>
				</tr>
				<% }) %>
			</table>
		</form>
	</body>
</html>