<html>
	<head>
		<title>Organizações Tabajara</title>
		<meta charset="UTF-8">
	</head>
	<body>
		<h1>Lista de Cursos</h1>
		<hr>

        <form action="/filtrarCurso" method="post">

            <label for="nome">Nome (use % como cartere coringa):</label><br>
            <input type="text" name="nome" id="nome" size="30"><br><br>
            
            <input type="submit" name="filtrar" value="Filtrar">
        
        </form>

		<a href="/formCurso">Novo Curso</a> &nbsp;
		<a href="/">Voltar para Tela Principal</a>&nbsp;

		<form action="/gerenciarCurso" method="post">
			<input type="submit" name="acao" value="Excluir">
			<input type="submit" name="acao" value="Atualizar">
			<table border="1">
				<tr>
					<th>Seleção</th>
					<th>Nome</th>
					<th>Número de períodos</th>
					<th>Tipo de períodos</th>
					<th>Modalidade</th>
					<th>Turno</th>
				</tr>
				<% cursos.forEach((c, index) => { %>
				<tr>
					<td><input type="radio" name="nome" value="<%= c.nome %>"></td>
					<td><%= c.nome %></td>
					<td><%= c.quantidade_periodo %></td>
					<td><%= c.tipo_periodo %></td>
					<td><%= c.modalidade_id %></td>
					<td><%= c.turno_id %></td>
				</tr>
				<% }) %>
			</table>
		</form>
	</body>
</html>