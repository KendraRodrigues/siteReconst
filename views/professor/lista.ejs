<html>
	<head>
		<title>Organizações Tabajara</title>
		<meta charset="UTF-8">
	</head>
	<body>
		<h1>Lista de Professores</h1>
		<hr>

        <form action="filtrarProfessor" method="post">

            <label for="nome">Nome (use % como cartere coringa):</label><br>
            <input type="text" name="nome" id="nome" size="30"><br><br>
            
            <input type="submit" name="filtrar" value="Filtrar">
        
        </form>

		<a href="/formProfessor">Novo Professor</a>
		<table border="1">
			<tr>
				<th>Matricula</th>
                <th>Senha</th>
				<th>Nome</th>
				<th>Telefone</th>
				<th>Email</th>
			</tr>
	        <% professores.forEach((p, index) => { %>
			<tr>
				<td><%= p.matricula %></td>
                <td><%= p.senha %></td>
				<td><%= p.nome %></td>
				<td><%= p.telefone %></td>
				<td><%= p.e_mail %></td>
			</tr>
			<% }) %>
		</table>
	</body>
</html>